<div class="flex flex-col h-screen bg-red-50">
  <div class="text-3xl text-center font-mono text-sky-900 p-6">
    通知一覧
  </div>
  <div class="overflow-auto px-4 mb-4" style="max-height: calc(100% - 10rem);">
    <div class="w-full max-w-md mx-auto">
      <% @notification_settings.each do |notification_setting| %>
        <div class="flex justify-between items-center p-6 bg-white rounded-2xl shadow-xl text-center mb-4">
          <div class="text-3xl font-mono text-sky-900">
            <%= notification_setting.preferred_time.strftime('%H:%M') %>
          </div>
          <div class="flex space-x-4">
            <div class="px-4 py-2 border rounded text-sky-900 border-gray-400 hover:bg-red-100 focus:outline-none font-mono cursor-pointer">
              編集
            </div>
            <div class="px-4 py-2 border rounded text-sky-900 border-gray-400 hover:bg-red-100 focus:outline-none font-mono cursor-pointer">
              削除
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="px-6 py-4">
    <div class="w-full max-w-md mx-auto">
      <button class="w-full px-4 py-2 bg-red-200 rounded-2xl shadow-xl text-sky-900 border-gray-400 hover:bg-red-300 focus:outline-none font-mono">
        通知を追加する
      </button>
    </div>
  </div>
</div>
